<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Phoneshop</display-name>
  <servlet>
    <servlet-name>controller</servlet-name>
    <servlet-class>by.bsuir.phoneshop.web.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
  <error-page>
    <location>/WEB-INF/pages/errorProductNotFound.jsp</location>
    <exception-type>by.bsuir.phoneshop.model.exception.ProductNotFoundException</exception-type>
  </error-page>
  <filter>
    <filter-name>localeFilter</filter-name>
    <filter-class>by.bsuir.phoneshop.web.filters.LocalizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>localeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>authoriseFilter</filter-name>
    <filter-class>by.bsuir.phoneshop.web.filters.AuthoriseFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>authoriseFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>adminFilter</filter-name>
    <filter-class>by.bsuir.phoneshop.web.filters.AdminFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>adminFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>banFilter</filter-name>
    <filter-class>by.bsuir.phoneshop.web.filters.BanFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>banFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <error-page>
    <location>/WEB-INF/pages/errorUserBanned.jsp</location>
    <exception-type>by.bsuir.phoneshop.model.exception.BannedUserException</exception-type>
  </error-page>
</web-app>